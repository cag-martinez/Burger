<div class="text-center">
  <img src="assets/image/burger.png" alt="trio of burgers">
</div>

<div class="container">
  <h1 class="display-4 text-center">Build a burger and try one!!</h1>
</div>


<div class="row">
  <div class="col-md">
    <ol class="list-group">
      <h2 style="center">Pick a burger</h2>
      {{#each burgers}}
      {{#unless devoured}}
      <li class="list-group-item">
        <p>
          {{id}}.{{burger_name}}
          <button data-newdevour="{{devoured}}" data-id="{{id}}"
            class="devour-burger btn btn-primary float-right">Devour</button>
        </p>
      </li>
      {{/unless}}
      {{/each}}
    </ol>
  </div>
</div>

<form class="create-form mb-3">
  <div>
    <div className="box" id="search-bar">
      <input type="text" id="createBurger" placeholder="create a burger">
      <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </div>
  </div>
</form>

<div class="col-md">
  <ol class="list-group">
    <h2>Devoured burgers!</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li class="list-group-item">
        <p>{{id}}. {{burger_name}}</p>
      </li>
      {{/if}}
      {{/each}}
  </ol>

  